@model Raivo.Models.Inscription

@{
    ViewBag.Title = "Index";
}

<h2><b>Bienvenue sur la page d'inscription, Bonne navigation </b></h2>


@using (Html.BeginForm("ajouterUtilisateur", "Inscription", FormMethod.Post))
{
