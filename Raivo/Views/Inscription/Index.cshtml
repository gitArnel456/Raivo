                @Html.EditorFor(model => model.Motdepasse, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Motdepasse, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal">Fermer</button>

                <button type="submit" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">S'inscrire</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
